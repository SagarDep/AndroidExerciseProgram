    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.oubowu.exerciseprogram.rxjava.RxJavaActivity">

        <include layout="@layout/common_toolbar"/>

        <com.oubowu.exerciseprogram.refreshrecyclerview.RefreshRecyclerView
            android:id="@+id/rrv"
            android:layout_width="match_parent"
